<% if (error && error.length > 0) { %>
    <div class="alert alert-danger" role="alert">
    <%= error %>
    </div>
<% } %>
<% if (success && success.length > 0) { %>
    <div class="alert alert-success" role="alert">
    <%= success %>
    </div>
<% } %>
<style>
    .alert{
        position:absolute;
        margin-left: 43vw;
        
        font-size: 40px;
        padding-left: 100px;
        padding-right: 100px;        
    }
    .alert-danger{
     
        opacity: 0.8;
        background-color: rgb(241, 69, 69);
        border-radius: 10px;
      
    }
    .alert-success{
        background-color: rgb(75, 255, 75);
    }
    
</style>