<!DOCTYPE html>
<html>
<head>
<title>TO DO LIST</title>


<script src="https://kit.fontawesome.com/a076d05399.js"></script>
<script>
    function show(){
        var v = document.getElementById("bar")
        v.classList.toggle("show")
    }
</script>
<style>
    .logo img{
        float:left;
        width: 160px;      
    }
    .main{
        max-width: 1500px;        
        margin: auto;
    }
    
    @media (max-width: 900px) {
        ul.tog{
        width: 16%;
        height: 90px;
        overflow: hidden;
        min-width: 120px;
        }
        ul.show{
            height: 100%;
            position: absolute;
        }    
    }
    
    
</style>
</head>
<body>
    <%- include("flash") %>
    <div class="main">
       
        <ul class="tog" id="bar">
            <% if(!currentUser) { %>   
            <label for="check" class="checkb">
                <i class="fas fa-bars" onclick="show() " style="margin-top: 30px;"></i>
            </label>
            <li id="tog"><a class="active" href="/"\\>HOME</a></li>                
            <li id="tog"><a class="active" href="/signup  ">SIGN UP</a></li>
            <li id="tog"><a class="active" href="/login ">LOG IN</a></li>
            <% } else { %>
            <li><a href="/board/<%= currentUser._id %>">Board</a></li>    
            <li><a href='/logout'>Log out</a></li>   
            <% } %>
        </ul>
        
    </div>
   
    
</body>
</html>
