
<%-include("partials/newtaskStyle")%>
<div class="newTask_Box">
    <form action="/todo/<%= bid %>" method="post">
        <a href="#0" class="back">
            <i class="fa fa-arrow-left" aria-hidden="true"></i>
        </a>
        <p>Task</p>
        <input type="text" name="task" placeholder="Task Name" required>
        <p>Date</p>
        <input type="date" name="date" >
        <p>Description</p>
        <input type="text" name="text" placeholder="Description">
        <p>Priority</p>
        <input type="color" name="prio">
        <input type="hidden" name="id" value=<%= cid %>>
        <input type="submit" value="SUBMIT" >  
        
    </form>
</div>



