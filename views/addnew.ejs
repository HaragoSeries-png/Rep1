
<%-include("partials/header")%>
<%-include("partials/newtaskStyle")%>
<body style="background-image: url('../board02.jpg');background-size:auto 100%; background-repeat:no-repeat ; ">
    

<div class="newTask_Box">
    <form action="/todo/<%= bid %>" method="post">
        <a href="/todo/<%= bid %>" class="back">
            <i class="fa fa-arrow-left" aria-hidden="true"></i>
        </a>
        <p>Task</p>
        <input type="text" name="task" placeholder="Task Name" required>
        <p>Date</p>
        <input type="date" name="date" >
        <p>Description</p>
        <textarea rows = "5" class="des" cols = "45" name = "text" placeholder="Enter description here" >          
        </textarea>
        <p>Priority</p>
        <input type="color" name="prio">
        <input type="hidden" name="id" value=<%= cid %>>
        <input type="submit" value="SUBMIT" >  
        
    </form>
</div>

</body>

